<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>Bookers</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <%= link_to " Home", user_path(current_user.id), class: 'fas fa-home nav-link text-light' %>
                </li>
                <li><a class="fas fa-users nav-link text-light" href="/users"> Users</a></li>
                <li>
                  <%= link_to "Books", books_path, class: 'fas fa-book-open nav-link text-light' %>
                </li>
                <li>
                  <%= link_to "logout", destroy_user_session_path, class: "fas fa-sign-out-alt nav-link text-light", method: :delete %>
                </li>
              <% else %>
                <li>
                  <%= link_to " Home", root_path, class: 'fas fa-home nav-link text-light' %>
                </li>
                <li><a class="fas fa-link nav-link text-light" href="/home/about"> About</a></li>

                <li>
                  <%= link_to " sign up", new_user_registration_path, class: 'fas fa-user-plus nav-link text-light' %>
                </li>
                <li>
                  <%= link_to " login", new_user_session_path, class: 'fas fa-sign-in-alt nav-link text-light' %>
                </li>
              <% end %>

            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <p id="notice">
        <% if @user && @user.errors.any? %>
          <%= @user.errors.count %>件のエラーが発生しました
          <% @user.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <% if @book && @book.errors.any? %>
          <%= @book.errors.count %>件のエラーが発生しました
          <% @book.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <% flash.each do |message_type, message| %>
          <%= message %>
        <% end %>
      </p>
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
      	<div class="row">
        	<div class="mx-auto">
        		<p>CopyRight Infratop.inc</p>
        	</div>
        </div>
      </div>
    </footer>
  </body>
</html>
