<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user, url:user_path(current_user.id), local:true do |f| %>

        <div class="form-group">
          <%= f.label :name, 'Name' %><br />
          <%= f.text_field :name, class: 'form-control name' %>
        </div>
        <div class="form-group">
          <%= f.label :profile_image, 'Image' %><br />
          <%= f.attachment_field :profile_image %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, 'Introduction' %><br />
          <%= f.text_area :introduction, class: 'form-control introduction' %>
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
        </div>
      <% end %>
    </div>
  </div>
</div>